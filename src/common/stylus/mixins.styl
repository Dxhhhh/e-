bg-image($url)
  float: left;
  display: inline;
  width: 10px;
  height: 18px;
  background: url($url) no-repeat;
  background-size: 10px 18px
  margin: 1px 0 0 -25px;

bg-image1($url)
  float: left;
  display: inline;
  width: 17px;
  height: 21px;
  line-height 21px
  background: url($url) no-repeat;
  background-size: 100%
  margin: 1px 0 0 -25px;

border-1px($color)
  position: relative;
  border:none;
  &:after
    content: '';
    position: absolute;
    bottom: 0;
    background:$color ;
    width: 100%;
    height: 1px;
    transform: scaleY(0.5);



